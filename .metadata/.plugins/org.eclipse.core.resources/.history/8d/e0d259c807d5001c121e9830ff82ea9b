package com.main;

import java.util.Scanner;

public class CRUDops {

	public static void main(String[] args) {
		
		Employee emp1 = new Employee(10,"Admin",10);
		Employee[] employees = { emp1 };
		System.out.println("1- Add, 2- Read, 3- Update, 4- Delete");
		System.out.println("Please enter num as per your operation : ");
		Scanner scan= new Scanner(System.in);
		int switchCaseNum = scan.nextInt();
		switch (switchCaseNum) {
		case 1:
			System.out.println("Add operation called");
			break;
		case 2:
			System.out.println("Read operation called");
			break;
		case 3:
			System.out.println("Update operation called");
			break;
		case 4:
			System.out.println("Delete operation called");
			break;
		default:
			System.out.println("Some Unknown error, please enter as per digit notation in the above");
		};
		scan.close();
	}
}
